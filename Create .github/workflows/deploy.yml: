name: ðŸš€ Build & Prepare Deployment

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
    - name: ðŸ“¥ Checkout code
      uses: actions/checkout@v4
      
    - name: ðŸ Setup Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'
        
    - name: ðŸ“¦ Validate files
      run: |
        echo "âœ… Validating deployment files..."
        ls -la
        [ -f "bot.py" ] && echo "âœ… bot.py found" || echo "âŒ bot.py missing"
        [ -f "requirements.txt" ] && echo "âœ… requirements.txt found" || echo "âŒ requirements.txt missing"
        [ -f "passenger_wsgi.py" ] && echo "âœ… passenger_wsgi.py found" || echo "âŒ passenger_wsgi.py missing"
        echo "ðŸ“‹ All files validated!"
        
    - name: ðŸ”§ Test imports
      run: |
        pip install -r requirements.txt
        python -c "import flask; print('âœ… Flask works')"
        python -c "import requests; print('âœ… Requests works')"
        echo "ðŸŽ‰ All dependencies working!"
        
    - name: ðŸ“¤ Create deployment package
      run: |
        # Create timestamp for unique package name
        TIMESTAMP=$(date +%Y%m%d-%H%M%S)
        
        # Create deployment instructions
